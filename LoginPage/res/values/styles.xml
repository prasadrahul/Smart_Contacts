<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <color name="custom_theme_color1">#FF0000</color>
	<style name="FirstTheme" >
        <item name="android:windowBackground">@color/custom_theme_color1</item>
        <item name="android:colorBackground">@color/custom_theme_color1</item>
    </style>
    
    <style name="SecondTheme" >
        <item name="android:textColor">#00FF00</item>
    <item name="android:colorBackground">#0000ff</item>
    </style>

    <color name="custom_theme_color">#b0b0ff</color>
<style name="ThirdTheme" parent="android:Theme.Light">
    <item name="android:windowBackground">@color/custom_theme_color</item>
    <item name="android:colorBackground">@color/custom_theme_color</item>
</style>


</resources>